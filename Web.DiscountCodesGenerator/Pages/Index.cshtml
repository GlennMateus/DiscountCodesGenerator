@page
@model Web.DiscountCodesGenerator.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";

    <div class="text-center">
        <h1 class="display-4">Welcome to discount code generator</h1>
    </div>

    <hr />

    <partial name="_IndexAddCodesPartial" model="Model.AddCodes" />

    <hr />
    if (Model.ShowResult)
    {
        <div class="row">
            <h3>✅ Existing/Added discount codes</h3>
            <pre>
            <code class="language-json">@Model.GeneratedCodes</code>
                    </pre>
        </div>
    }
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (TempData["ToastMessage"] != null)
    {
        <script>
            showToast('@TempData["ToastType"]', '@Html.Raw(TempData["ToastMessage"])');
        </script>
    }
}